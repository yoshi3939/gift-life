<%= form_with(model: gift, local: true) do |f| %>
  
  <%= render 'layouts/error_messages', model: f.object %>

  <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"status-select"}) %>
  <%= f.text_field :name, placeholder: "ギフトの名称" %>
  <%= f.file_field :image %>
  <%= f.text_field :partner, placeholder: "相手未入力" %>
  <%= f.date_select :event_date, use_month_numbers: true %>
  <%= f.text_field :event, placeholder: "イベント未入力" %>
  <%= f.text_area :memo, placeholder: "メモ", rows: "10" %>
  <%= f.submit "登録" %>

<% end %>
