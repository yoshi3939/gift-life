<div class="contents row">
  <p>Gift Record詳細</p>
    <div class="content_post">
      <%= image_tag @gift.image.variant(resize: '500x500'), class: 'gift-image' if @gift.image.attached? %>
      <div><%= @gift.name %></div>
      <div><%= @gift.status.name %></div>
      <div><%= @gift.partner %></div>
      <div><%= @gift.event_date %>
      <div><%= @gift.event %></div>
      <div><%= @gift.memo %></div>
    </div>
    <%= link_to '編集', edit_gift_path(@gift.id) %>
    <%= link_to '削除', gift_path(@gift.id), method: :delete, data: { confirm: 'この記録を削除しますか？' } %>
</div>