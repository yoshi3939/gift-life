<div class ="contents row">
  <p class="sub_title">お薦めギフト</p>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to "商品登録", new_item_path, class: "content_a btn_a" %>
<% end %>

  <%= form_with(url: search_items_path, method: :get, local: true, class: "search-form") do |f| %>
    <%= f.text_field :keyword, placeholder: "ギフトを検索", class: "search-input" %>
    <%= f.submit "検索", class: "search-btn" %>
  <% end %>

   <% @items.each do |item| %>
    <%= render partial: "item", locals: { item: item } %>

    <% if user_signed_in? && current_user.admin? %>
    <div class="line_spase" >
      <%= link_to "編集", edit_item_path(item.id), class: "content_a btn_b" %>
      <%= link_to '削除', item_path(item.id), method: :delete, class: "content_a btn_b", data: { confirm: 'この記録を削除しますか？' } %>
    </div>
    <% end %>
   <% end %>
</div>